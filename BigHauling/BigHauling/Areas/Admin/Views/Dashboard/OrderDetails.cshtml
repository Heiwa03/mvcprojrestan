@model BigHauling.Domain.Entities.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details for Order #@Model.Id</h1>

<div>
    <h4>Order Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.ApplicationUser.UserName (@Model.ApplicationUser.Email)</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToString("F")</dd>

        <dt class="col-sm-2">Order Total</dt>
        <dd class="col-sm-10">@Model.OrderTotal.ToString("C")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.OrderStatus</dd>
    </dl>
</div>

<h4 class="mt-5">Items in this Order</h4>
<table class="table">
    <thead>
        <tr>
            <th>Truck ID</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var detail in Model.OrderDetails)
        {
            <tr>
                <td>@detail.TruckId</td>
                <td>@detail.Truck.Brand</td>
                <td>@detail.Truck.Model</td>
                <td>@detail.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Orders" class="btn btn-secondary">Back to Orders</a>
</div> 