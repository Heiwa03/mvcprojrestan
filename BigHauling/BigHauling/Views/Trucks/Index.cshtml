@model IEnumerable<BigHauling.Domain.Entities.Truck>

@{
    ViewData["Title"] = "Truck Inventory";
}

<h1>Truck Inventory</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Brand @item.Model</h5>
                    <p class="card-text">Year: @item.Year</p>
                    <p class="card-text">Mileage: @((item.Mileage ?? 0).ToString("N0"))</p>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Price.ToString("C")</h6>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                        <input type="hidden" name="truckId" value="@item.Id" />
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>