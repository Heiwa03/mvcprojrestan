@model List<BigHauling.Models.Truck>
@{
    ViewData["Title"] = "Truck Inventory";
    var brands = ViewBag.Brands as List<string> ?? new List<string>();
    var conditions = ViewBag.Conditions as List<string> ?? new List<string>();
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1>Our Truck Inventory</h1>
                <p class="lead">Browse our extensive selection of quality trucks. From heavy-duty haulers to fuel-efficient models, we have the perfect truck for your business needs.</p>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-truck" style="font-size: 10rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</section>

<!-- Search and Filter Section -->
<section class="search-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="filter-card">
                    <form method="get" asp-action="Index">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="searchTerm" class="form-label">Search</label>
                                <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                                       value="@ViewBag.SearchTerm" placeholder="Search trucks...">
                            </div>
                            <div class="col-md-2 mb-3">
                                <label for="brand" class="form-label">Brand</label>
                                <select class="form-select" id="brand" name="brand">
                                    <option value="">All Brands</option>
                                    @foreach (var brand in brands)
                                    {
                                        if (brand == ViewBag.SelectedBrand)
                                        {
                                            <option value="@brand" selected>@brand</option>
                                        }
                                        else
                                        {
                                            <option value="@brand">@brand</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2 mb-3">
                                <label for="condition" class="form-label">Condition</label>
                                <select class="form-select" id="condition" name="condition">
                                    <option value="">All Conditions</option>
                                    @foreach (var condition in conditions)
                                    {
                                        if (condition == ViewBag.SelectedCondition)
                                        {
                                            <option value="@condition" selected>@condition</option>
                                        }
                                        else
                                        {
                                            <option value="@condition">@condition</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2 mb-3">
                                <label for="minPrice" class="form-label">Min Price</label>
                                <input type="number" class="form-control" id="minPrice" name="minPrice" 
                                       value="@ViewBag.MinPrice" placeholder="$0">
                            </div>
                            <div class="col-md-2 mb-3">
                                <label for="maxPrice" class="form-label">Max Price</label>
                                <input type="number" class="form-control" id="maxPrice" name="maxPrice" 
                                       value="@ViewBag.MaxPrice" placeholder="$200,000">
                            </div>
                            <div class="col-md-1 mb-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-times me-2"></i>Clear Filters
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Results Section -->
<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-6">
                <h2>Available Trucks</h2>
                <p class="text-muted">Showing @Model.Count truck(s)</p>
            </div>
            <div class="col-md-6 text-end">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary active" id="gridView">
                        <i class="fas fa-th"></i>
                    </button>
                    <button type="button" class="btn btn-outline-primary" id="listView">
                        <i class="fas fa-list"></i>
                    </button>
                </div>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-search" style="font-size: 4rem; color: #ccc; margin-bottom: 1rem;"></i>
                <h3>No trucks found</h3>
                <p class="text-muted">Try adjusting your search criteria or browse all our trucks.</p>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-truck me-2"></i>View All Trucks
                </a>
            </div>
        }
        else
        {
            <div class="row" id="truckGrid">
                @foreach (var truck in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="position-relative">
                                <img src="@(string.IsNullOrEmpty(truck.ImageUrl) ? "/images/truck-placeholder.jpg" : truck.ImageUrl)" 
                                     class="card-img-top" alt="@truck.Name">
                                <span class="badge @(truck.IsAvailable ? "badge-available" : "badge-sold") position-absolute top-0 end-0 m-2">
                                    @(truck.IsAvailable ? "Available" : "Sold")
                                </span>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@truck.Name</h5>
                                <div class="price">$@truck.Price.ToString("N0")</div>
                                <p class="card-text flex-grow-1">@truck.Description</p>
                                <div class="truck-specs">
                                    <div class="row">
                                        <div class="col-6">
                                            <small><i class="fas fa-calendar"></i> @truck.Year</small>
                                        </div>
                                        <div class="col-6">
                                            <small><i class="fas fa-road"></i> @(truck.Mileage?.ToString("N0") ?? "N/A") miles</small>
                                        </div>
                                        <div class="col-6">
                                            <small><i class="fas fa-gas-pump"></i> @truck.FuelType</small>
                                        </div>
                                        <div class="col-6">
                                            <small><i class="fas fa-cog"></i> @truck.Transmission</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <a asp-action="Details" asp-route-id="@truck.Id" class="btn btn-primary w-100">
                                        <i class="fas fa-eye me-2"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- List View (Hidden by default) -->
            <div class="row d-none" id="truckList">
                @foreach (var truck in Model)
                {
                    <div class="col-12 mb-3">
                        <div class="card">
                            <div class="row g-0">
                                <div class="col-md-3">
                                    <div class="position-relative">
                                        <img src="@(string.IsNullOrEmpty(truck.ImageUrl) ? "/images/truck-placeholder.jpg" : truck.ImageUrl)" 
                                             class="img-fluid rounded-start h-100" style="object-fit: cover;" alt="@truck.Name">
                                        <span class="badge @(truck.IsAvailable ? "badge-available" : "badge-sold") position-absolute top-0 end-0 m-2">
                                            @(truck.IsAvailable ? "Available" : "Sold")
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <h5 class="card-title">@truck.Name</h5>
                                                <p class="card-text">@truck.Description</p>
                                                <div class="truck-specs">
                                                    <span class="me-3"><i class="fas fa-calendar"></i> @truck.Year</span>
                                                    <span class="me-3"><i class="fas fa-road"></i> @(truck.Mileage?.ToString("N0") ?? "N/A") miles</span>
                                                    <span class="me-3"><i class="fas fa-gas-pump"></i> @truck.FuelType</span>
                                                    <span><i class="fas fa-cog"></i> @truck.Transmission</span>
                                                </div>
                                            </div>
                                            <div class="col-md-4 text-end">
                                                <div class="price mb-3">$@truck.Price.ToString("N0")</div>
                                                <a asp-action="Details" asp-route-id="@truck.Id" class="btn btn-primary">
                                                    <i class="fas fa-eye me-2"></i>View Details
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

@section Scripts {
    <script>
        // Grid/List view toggle
        document.getElementById('gridView').addEventListener('click', function() {
            document.getElementById('truckGrid').classList.remove('d-none');
            document.getElementById('truckList').classList.add('d-none');
            document.getElementById('gridView').classList.add('active');
            document.getElementById('listView').classList.remove('active');
        });

        document.getElementById('listView').addEventListener('click', function() {
            document.getElementById('truckGrid').classList.add('d-none');
            document.getElementById('truckList').classList.remove('d-none');
            document.getElementById('gridView').classList.remove('active');
            document.getElementById('listView').classList.add('active');
        });
    </script>
} 